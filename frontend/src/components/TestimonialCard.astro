---
import type { Testimonial } from "@/lib/getTestimonials";

interface Props extends Testimonial {}

const { name, position, review, avatarUrl } = Astro.props;
---

<article
  class="bg-navy-800 p-8 rounded-lg flex flex-col gap-4 font-opensans-400 text-sm shadow-md sm:text-base md:max-w-md md:col-span-2 lg:col-span-1"
>
  <p>
    {review}
  </p>

  <div class="flex gap-4 items-center">
    <figure class="w-10 h-10 rounded-full overflow-clip">
      <img class="w-full h-full" src={avatarUrl} alt=`ReseÃ±a de ${name}` />
    </figure>

    <div class="flex flex-col">
      <span class="font-opensans-700 text-sm">{name}</span>
      <span class="text-xs text-slate-300">{position}</span>
    </div>
  </div>
</article>
