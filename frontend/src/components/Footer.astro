---
import iconEmail from "../assets/images/icon-email.svg";
import iconLocation from "../assets/images/icon-location.svg";
import iconPhone from "../assets/images/icon-phone.svg";
import FacebookIcon from "./assets/FacebookIcon.astro";
import XIcon from "./assets/XIcon.astro";
import InstagramIcon from "./assets/InstagramIcon.astro";

interface Props {
  logoUrl: string;
  location: string;
}

const { logoUrl, location } = Astro.props;
---

<footer class="bg-navy-950">
  <div
    class="[--container-padding:40px_0] custom-container text-white font-opensans-400 flex flex-wrap lg:gap-2"
  >
    <figure class="w-full object-contain ml-4 lg:w-full">
      <img src={logoUrl} alt="Logo de la App" class="w-40" />
    </figure>

    <div class="flex items-start gap-8 mt-8 lg:w-1/3 lg:mt-4 lg:gap-2">
      <img src={iconLocation.src} alt="Location Icon" class="pt-1 w-4 h-auto" />
      <p>
        {location}
      </p>
    </div>

    <div class="flex flex-col gap-4 mt-4 w-full lg:flex-1 lg:w-fit lg:pl-8">
      <div class="flex items-start gap-8 lg:gap-4">
        <img src={iconPhone.src} alt="Phone icon" class="pt-1 w-4 h-auto" />
        <p>+1-543-123-4567</p>
      </div>
      <div class="flex items-start gap-8 lg:gap-4">
        <img src={iconEmail.src} alt="Phone icon" class="pt-1 w-4 h-auto" />
        <p>example@fylo.com</p>
      </div>
    </div>

    <div
      class="flex flex-col gap-4 w-full mt-16 sm:w-[50%] lg:w-1/5 lg:mt-4 lg:items-end"
    >
      <a
        class="hover:font-opensans-700 active:font-opensans-700 custom-transition"
        href="#"
      >
        Sobre nosotros
      </a>
      <a
        class="hover:font-opensans-700 active:font-opensans-700 custom-transition"
        href="#"
      >
        Empleos
      </a>
      <a
        class="hover:font-opensans-700 active:font-opensans-700 custom-transition"
        href="#"
      >
        Prensa
      </a>
      <a
        class="hover:font-opensans-700 active:font-opensans-700 custom-transition"
        href="#"
      >
        Blog
      </a>
    </div>

    <div
      class="flex flex-col gap-4 w-full mt-8 sm:w-[50%] sm:mt-16 lg:w-1/5 lg:mt-4 lg:items-end"
    >
      <a
        class="hover:font-opensans-700 active:font-opensans-700 custom-transition"
        href="#"
      >
        Contáctenos
      </a>
      <a
        class="hover:font-opensans-700 active:font-opensans-700 custom-transition"
        href="#"
      >
        Términos
      </a>
      <a
        class="hover:font-opensans-700 active:font-opensans-700 custom-transition"
        href="#"
      >
        Privacidad
      </a>
    </div>

    <div class="flex gap-4 justify-center w-full mt-16 lg:mt-8 lg:justify-end">
      <a
        href="#"
        class="cursor-pointer fill-white group hover:fill-teal-200 active:fill-teal-200 custom-transition"
        aria-label="Ir a nuestra cuenta de facebook"
      >
        <figure
          class="border border-white group-hover:border-teal-200 p-2 rounded-full h-10 w-10 custom-transition"
        >
          <FacebookIcon className="w-full" />
        </figure>
      </a>
      <a
        href="#"
        class="cursor-pointer fill-white group hover:fill-teal-200 active:fill-teal-200 custom-transition"
        aria-label="Ir a nuestra cuenta de X"
      >
        <figure
          class="border border-white p-2 group-hover:border-teal-200 rounded-full h-10 w-10 custom-transition"
        >
          <XIcon className="w-full" />
        </figure>
      </a>
      <a
        href="#"
        class="cursor-pointer fill-white group hover:fill-teal-200 active:fill-teal-200 custom-transition"
        aria-label="Ir a nuestra cuenta de instagram"
      >
        <figure
          class="border border-white p-2 group-hover:border-teal-200 rounded-full h-10 w-10 custom-transition"
        >
          <InstagramIcon className="w-full" />
        </figure>
      </a>
    </div>
  </div>
</footer>
