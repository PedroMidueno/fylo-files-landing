---
import type { Feature } from "@/lib/getFeatures";
import FeatureCard from "./FeatureCard.astro";

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<section class="bg-navy-900">
  <div
    class="custom-container grid grid-cols-1 md:grid-cols-2 md:gap-x-16 gap-y-16 justify-items-center"
  >
    {features.map((feature) => <FeatureCard {...feature} />)}
  </div>
</section>
