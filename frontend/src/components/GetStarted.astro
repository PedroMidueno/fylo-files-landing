---
import type { EmailBoxData } from "@/lib/getEmailBoxData";

interface Props extends EmailBoxData {}

const { title, paragraph, ctaText } = Astro.props;
---

<section class="get-started-section">
  <div class="custom-container">
    <form
      class="bg-navy-850 w-full shadow-2xl flex flex-wrap gap-4 text-white px-8 py-12 rounded-lg max-w-3xl mx-auto md:px-20"
    >
      <h3 class="text-xl font-raleway-700 w-full text-center lg:text-2xl">
        {title}
      </h3>
      <p class="text-center font-opensans-400 w-full">
        {paragraph}
      </p>

      <input
        type="email"
        required
        aria-required
        placeholder="email@example.com"
        class="w-full sm:w-[60%] bg-white font-opensans-400 py-3 px-4 rounded-3xl text-slate-400 text-sm lg:text-base"
      />
      <button
        id="cta-btn"
        type="submit"
        class="w-full sm:w-[35%] text-sm font-raleway-700 text-white py-3 rounded-3xl bg-cta shadow-xl lg:text-base cursor-pointer custom-transition"
      >
        {ctaText}
      </button>
    </form>
  </div>
</section>

<style>
  .get-started-section {
    background-image: linear-gradient(
      to bottom,
      var(--color-navy-900) 50%,
      var(--color-navy-950) 50%
    );
  }

  /* Estilos para dispositivos táctiles */
  @media (pointer: coarse) {
    #cta-btn:active {
      background-position: left center;
    }
  }

  /* Estilos para dispositivos con puntero fino (como un ratón) */
  @media (pointer: fine) {
    #cta-btn:hover {
      background-position: left center;
    }
  }
</style>
