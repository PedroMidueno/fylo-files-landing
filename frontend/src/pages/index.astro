---
import { getCompleteData } from "@/lib/getCompleteData";
import Features from "../components/Features.astro";
import Footer from "../components/Footer.astro";
import GetStarted from "../components/GetStarted.astro";
import Hero from "../components/Hero.astro";
import Navbar from "../components/Navbar.astro";
import Productive from "../components/Productive.astro";
import Testimonials from "../components/Testimonials.astro";
import Layout from "../layouts/Layout.astro";
import "aos/dist/aos.css";

const {
	generalData,
	heroData,
	features,
	productive,
	testimonials,
	emailBoxData,
	footerData,
} = await getCompleteData();

const { logoUrl, ...metaData } = generalData;
---

<Layout {...metaData}>
	<Navbar logoUrl={logoUrl} />
	<main>
		<Hero {...heroData} />
		<Features features={features} />
		<Productive {...productive} />
		<Testimonials testimonials={testimonials} />
		<GetStarted {...emailBoxData} />
	</main>
	<Footer logoUrl={logoUrl} location={footerData.location} />
</Layout>

<script src="../lib/aos.ts"></script>
